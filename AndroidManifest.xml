<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itheima.redbaby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sb"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        >
        <!-- 欢迎页 -->
        <activity
            android:name="com.itheima.redbaby.activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 引导页 -->
        <activity android:name="com.itheima.redbaby.activity.PreviewActivity" />
        <!-- 首页 -->
        <activity android:name="com.itheima.redbaby.activity.HomeActivity" />
        	<!-- 首页5个条目 -->
        	<activity android:name="com.itheima.redbaby.activity.TopicActivity" />
        	<activity android:name="com.itheima.redbaby.activity.BrandActivity" />
        	<activity android:name="com.itheima.redbaby.activity.LimitbuyActivity" />
        	<activity android:name="com.itheima.redbaby.activity.NewproductActivity" />
        	<activity android:name="com.itheima.redbaby.activity.HotproducttActivity" />
        <!-- 分类 -->
        <activity android:name="com.itheima.redbaby.activity.ClassActivity_2" />
        <activity android:name="com.itheima.redbaby.activity.ClassActivity_3" />
        <!-- 更多 -->
        <activity android:name="com.itheima.redbaby.activity.MoreActivity" />
        	<!-- 选项 -->
        	<activity android:name="com.itheima.redbaby.activity.More_AboutActivity" />
        	<activity android:name="com.itheima.redbaby.activity.More_HelpActivity" />
        		<activity android:name="com.itheima.redbaby.activity.HelpContentActivity" />
        	<activity android:name="com.itheima.redbaby.activity.More_HistoryActivity" />
        	<activity android:name="com.itheima.redbaby.activity.More_SuggestActivity" />
        	
        	<!-- 账户中心 -->
        	<activity android:name="com.itheima.redbaby.activity.More_UserActivity" />
        		<!-- 登陆注册 -->
        		<activity android:name="com.itheima.redbaby.activity.RegistActivity" />
        		<activity android:name="com.itheima.redbaby.activity.LoginActivity" />
        		<!-- 地址管理 -->
        		<activity android:name="com.itheima.redbaby.activity.AddressActivity" />
        		<activity android:name="com.itheima.redbaby.activity.AddressEditActivity" />
        		<activity android:name="com.itheima.redbaby.activity.AddressAddActivity" />
        		<!-- 我的订单 -->
        		<activity android:name="com.itheima.redbaby.activity.OrderListActivity" />
        		<activity android:name="com.itheima.redbaby.activity.OrderInfoActivity" />
        		<activity android:name="com.itheima.redbaby.activity.OrderLogisticsActivity" />
        		<!-- 收藏夹 -->
        		<activity android:name="com.itheima.redbaby.activity.FavoriteActivity" />
        		<!-- 优惠券 -->
        		<activity android:name="com.itheima.redbaby.activity.CouponActivity" />
    </application>
     <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 创建桌面快捷方式 -->
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <!-- 允许访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络状态的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 读取LOG权限 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>